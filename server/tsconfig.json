// This file is used to configure the TypeScript compiler.
// The compiler will use this file to determine how to compile the project.
{
  "compilerOptions": {
    "target": "ES2021",
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "",
    "strict": true,
    "baseUrl": "./src/",
    "paths": {
      "*": [
        "node_modules",
        "public"
      ]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts" // Ensure this path is included
  ],
  "exclude": [
    "node_modules/**/*.ts"
  ]
}
